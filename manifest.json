{
  "manifest_version": 3,
  "name": "screen recorder",
  "description": "To record screen",
  "version": "1.0.0",
  "icons": {
    "32": "/assets/icons/icon32.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "32": "/assets/icons/icon32.png"
    }
  },
  "host_permissions": ["http://*/", "https://*/"],
  "permissions": [
    "scripting",
    "tabs",
    "activeTab"
  ]
}
